# Copy this to `.env` and fill in your values

# Neon
export NEON_API_KEY=your-neon-api-key
export NEON_PROJECT_ID=your-neon-project-id
export NEON_SOURCE_DB_URL=postgres://user:pass@source-neon/db
export NEON_TARGET_DB_URL=postgres://user:pass@target-neon/db  # or external PG

# Cloudflare (Workers)
export CF_API_TOKEN=your-cf-api-token                 # optional if using wrangler interactively
export CF_ACCOUNT_ID=your-cf-account-id               # required if using API path
export CF_WORKER_NAME=cloudflare-chatgpt-mcp          # worker to update
export CF_SECRET_NAME=DATABASE_URL                    # secret name to update

# Rclone (Google Drive)
export RCLONE_REMOTE=gdrive:chitty-backups/neon
export BACKUP_NAME=neon-prod-$(date +%F-%H%M)

# App service secrets (if any other deploys need flip)
export APP_SECRET_PATH=.env.prod

